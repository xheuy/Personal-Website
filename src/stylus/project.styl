@import 'nib'
@import 'custom/reset'

x-reset()

@font-face {
    font-family: 'Krungthep';
    src: url('fonts/Krungthep.eot');
    src: url('fonts/Krungthep.eot?#iefix') format('embedded-opentype'),
        url('fonts/Krungthep.woff2') format('woff2'),
        url('fonts/Krungthep.woff') format('woff'),
        url('fonts/Krungthep.ttf') format('truetype'),
        url('fonts/Krungthep.svg#Krungthep') format('svg');
    font-weight: normal;
    font-style: normal;
}

.T__header
    position relative
    width 100vw
    height 100vh
    background-position center
    background-repeat no-repeat
    background-size cover
    background-attachment fixed
    margin-bottom 25px

.T__section
    width 100%
    max-width 960px
    margin 0 auto
    padding 25px 1em

    h1
        font-size 3.6rem
        color #F17E44
        text-align center
        margin 25px 0
        font-family 'Krungthep'

    h2
        font-size 2.2rem
        color #8d8d8d
        margin 50px 0 25px
        font-family 'Krungthep'

        &.orange
            color #FF8B31

    h3
        font-size 1.8rem
        color #8d8d8d
        margin 12px 0
        font-family 'Helvetive'

    h4
        font-size 1.6rem
        color #8d8d8d
        margin-bottom 1em

    p
        font-size 1.6rem
        line-height 1.4em
        color #8d8d8d
        font-family 'Helvetive'

    .T__wrap
        position relative
        margin 18px 0

        .T__wrap-bg
            width 100%


// custom
.work-5
    header
        background-image url(../images/work5/top-bg.jpg)

        .flex-wrap
            width 100%
            height 100%
            display flex
            justify-content center
            align-items center

        .top-mobile
            height 80%

        .top-title
            margin-left 5%
            font-family 'Krungthep'
            font-size 3.2rem
            padding .5em .8em
            background-color #F38D59
            color: #fff
            text-shadow 1px 1px 5px rgba(0,0,0,.5)

        .top-desc
            position absolute
            right 40px
            bottom 30px
            width 15%

    .txt1
        position absolute
        left 50%
        top 50%
        transform: translate(-50%, -50%)
        width 60%

        p
            color #fff

    .img-p-wrap
        display flex
        justify-content space-between
        align-items center

        img
            width 42%

        p
            width 45%

    .layout-1
        display flex
        justify-content space-between
        align-items center

        img
            width 55%

        .t-p
            width 40%
            display flex
            flex-direction column
            align-items center

    .layout-2
        display flex
        justify-content space-between
        align-items center

        img
            width 60%

        .t-p
            width 35%

            > *
                width 100%
