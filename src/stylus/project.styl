@import 'nib'
@import 'custom/reset'

x-reset()

@font-face {
    font-family: 'Krungthep';
    src: url('fonts/Krungthep.eot');
    src: url('fonts/Krungthep.eot?#iefix') format('embedded-opentype'),
        url('fonts/Krungthep.woff2') format('woff2'),
        url('fonts/Krungthep.woff') format('woff'),
        url('fonts/Krungthep.ttf') format('truetype'),
        url('fonts/Krungthep.svg#Krungthep') format('svg');
    font-weight: normal;
    font-style: normal;
}

.T__header
    position relative
    width 100vw
    height 100vh
    background-position center
    background-repeat no-repeat
    background-size cover
    background-attachment fixed
    margin-bottom 25px

    .flex-wrap
        width 100%
        height 100%
        display flex
        justify-content center
        align-items center

    .top-title
        margin-left 5%
        font-family 'Krungthep'
        font-size 3.2rem
        padding .5em .8em
        background-color #F38D59
        color: #fff
        text-shadow 1px 1px 5px rgba(0,0,0,.5)

    .top-desc
        position absolute
        right 40px
        bottom 30px
        width 15%

.T__section
    width 100%
    max-width 1000px
    margin 0 auto
    padding 25px 1em

    h1
        font-size 3.6rem
        line-height 1.2em
        color #F17E44
        text-align center
        margin 25px 0
        font-family 'Krungthep'

        &.blue
            color #97BEED

    h2
        font-size 2.2rem
        line-height 1.2em
        color #8d8d8d
        margin 50px 0 25px
        font-family 'Krungthep'

        &.orange
            color #FF8B31

    h3
        font-size 1.8rem
        line-height 1.2em
        color #8d8d8d
        margin 12px 0
        font-family 'Helvetive'

    h4
        font-size 1.6rem
        line-height 1.2em
        color #8d8d8d
        margin-bottom 1em

    p
        font-size 1.6rem
        line-height 1.2em
        color #8d8d8d
        font-family 'Helvetive'

    .T__wrap
        position relative
        margin 25px 0

        .T__wrap-bg
            width 100%


